<div class="jumbotron">
    <h1 class="display-4"><%= @friend.first_name %> <%= @friend.last_name %></h1>
    <p><i class="far fa-envelope"></i> <%= @friend.email %> - <i class="fas fa-phone"></i> <%= @friend.phone %> - <i class="fab fa-twitter"></i> <%= @friend.twitter %></p>
    <hr class="my-4">
    <%= link_to 'Edit', edit_friend_path(@friend), class:"btn btn-primary btn-lg"%> |
    <%= link_to 'Back', friends_path, class:"btn btn-secondary btn-lg" %> |
    <%= link_to 'Delete', @friend, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-lg" %>
</div>